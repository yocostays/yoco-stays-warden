{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "baseUrl": ".",
      "paths": {
        "@components/*" : ["./src/components/*"],

        "@pages/*" : ["./src/pages/*"],

        "@layouts/*" : ["./src/layouts/*"],
  
        "@features/*" : ["./src/features/*"],
  
        "@utils/*" : ["./src/utils/*"],
  
        "@assets/*" : ["./src/assets/*"],

        "@theme/*" : ["./src/theme/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }